{
  "name": "ADHD Reader",
  "version": "1.0.0",
  "description": "Read faster",
  "manifest_version": 3,
  "author": "Pierre Portal",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["storage", "activeTab", "scripting"],
  "action": {
    "default_popup": "src/ui/index.html",
    "default_title": "ADHD Reader"
  },
  "icons": {
    "16": "img/icon16.png",
    "32": "img/icon32.png"
  }
}
